<div class="d-flex justify-content-center pet_title">
  <h1><%= current_user.name %>'s adoption requests!</h1>
</div>
<div class="container main_body">
  <div class="row">
    <% @my_requests.each_with_index do |request, index| %>
      <div class="column pet_card">
        <div class="d-flex flex-column align-items-start justify-content-end">
          <h2 class="text-primary">Request #<%= index + 1%></h2>
          <%= render "request", request: request %>
          <%# what does this mean? request: request %>
          <strong><%= link_to "cancel request", pet_adoption_request_path(request.pet, request), data: {turbo_method: :delete, turbo_confirm: "are you sure you want to delete this request?"},class: "pet_link"%></strong>
        </div>
      </div>
    <% end %>
  </div>
</div>
